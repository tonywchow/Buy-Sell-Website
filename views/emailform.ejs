
<% include partials/header.ejs %>
<h1>Email ğŸ¥”</h1>
<section class="input-form">
  <form action="/email" method="POST">
    <div class="form-group">
      <div class="elements">
          <label class="label" for="recipient">To: </label>
          <input
            class="form-control"
            type="text"
            name="receipient"
            value="<%= product.email %>"
          />
      </div>
      <div class="elements">
        <label class="label" for="sender">From: </label>
        <input
          class="form-control"
          type="text"
          name="sender"
          value="<%= info.email %>"
        />
      </div>
      <div class="elements">
        <label class="label" for="subject">Subject: </label>
        <input
          class="form-control"
          type="text"
          name="subject"
          value="<%= product.title %>"
        />
      </div>
      <div class="elements">
          <label class="label" for="message">Message: </label>
          <textarea
          class="text-space"
          type="text"
          name="message"
          placeholder="Message"
          >Dear <%=product.name %>,</textarea>
      </div>
    </div>
    <div class="button">
      <button type="submit">Send</button>
    </div>
  </form>
</section>
</body>
</html>
